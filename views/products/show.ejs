<%-include("../partials/navbar")%>
<%-include("../partials/header")%>

<link rel="stylesheet" href="/css/star.css">
<div class="container" style="margin-top: 4rem;">
  <%- include("../partials/flash")%>
<div class="row ">
  
      <div class="col-lg-6 mt-3">
          <div class="card w-75 p-3 h-auto d-inline-block mt-3" style="width: 18rem;">
              <img src="<%=product.img%>" class="card-img-top" alt="...">
              <div class="card-body w-auto p-3 h-auto d-inline-block">
                <h5 class="card-title text-center"> <%=product.name%> </h5>
                <p class="card-text text-center">	&#8377 <%=product.price%> </p>
                <p class="card-text text-center"> <%=product.desc%> </p>
                <a href="#" class="btn btn-success">Buy</a>
                <form action="/user/<%=product._id%>/cart" method="POST">
                <button class="btn btn-secondary">Add to Cart</button>
                </form>
                <a href="/products/<%=product._id%>/edit" class="btn btn-primary">Edit</a>
                <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger" >Delete</button>
                  </form>
                </div>
              
            </div>
      </div>
      <div class="col-lg-6 mt-3"> <h1>Leave a Review</h1>
        <form class="validated-form"action="/products/<%=product.id%>/review" method="POST" style="max-width:70%;" novalidate>
        <div class="mt-4">
          <label for="name" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>         
          <div class="valid-feedback">Look's Good </div>
        </div>
        <div class="mb-2 mt-1">
          <label for="desc" class="form-label">Comment</label>
          <textarea class="form-control" id="desc" cols="25" rows="5" name="comment" required></textarea>
      </div>
        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
      </form>
      <div class="col-lg-6 mt-3">
        <%for(let review of product.reviews){%>
          <div class="card" style="width:450px; height:230px" >
            <h5 class="card-header text-capitalize"> <%=review.user%></h5>
            <div class="card-body">
              
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%=review.rating%> stars
              </p>
              <h5 class="card-title">Rating:<%=review.rating%></h5>
              <p class="card-text">Comment: <%=review.comment%></p>
            </div>
          </div>
          
          
          <%}%>
        </div>
  
        
      </div>
      </div>
     
      
     
    </div>
  </div>
  
  



<%-include("../partials/footer")%>